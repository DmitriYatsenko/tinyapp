<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
        <a class="navbar-brand" href="/urls">TinyApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/urls">My URLs</a>
                <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
            </div>

            <% if(username) { %>
            <div class="navbar-nav">
                <p class="nav-item">Logged in as <%= username %></p>
            </div>
            <form class="form-inline" action="/logout" method="POST">
                <button type="submit" class="btn btn-primary">Logout</button>
            </form>
            <% } else { %>
            <form class="form-inline" action="/login" method="POST">
                <div class="form-group mb-2">
                    <input class="form-control" type="text" name="username" placeholder="username"
                        style="width: 200px; margin-left:auto; margin-right: auto;">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <form class="form-inline" action="/register" method="POST">
                <div class="form-group mb-2">
                    <input class="form-control" type="text" name="username" placeholder="username"
                        style="width: 200px; margin-left:auto; margin-right: auto;">
                    <input class="form-control" type="text" name="email" placeholder="email"
                        style="width: 200px; margin-left:auto; margin-right: auto;">
                    <input class="form-control" type="text" name="password" placeholder="password"
                        style="width: 200px; margin-left:auto; margin-right: auto;">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
            <% } %>
        </div>
    </nav>
</header>